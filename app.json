{
  "expo": {
    "name": "amazon-clone",
    "slug": "amazon-clone",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "splash": {
      "image": "./assets/amazon-logo-original.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "scheme": "amazonclone",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "edgeToEdgeEnabled": true,
      "package": "com.prachayagh.amazonclone"
    },
    "plugins": [
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}